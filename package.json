{
  "name": "whatsapp-clone-api",
  "version": "1.0.0",
  "description": "Complete WhatsApp Web API Clone with Multi-Session Support, RBAC, and n8n Integration",
  "main": "app.js",
  "keywords": [
    "whatsapp",
    "api",
    "baileys",
    "whatsapp-web",
    "multi-session",
    "webhook",
    "n8n",
    "sqlite",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/whatsapp-clone-api"
  },
  "bugs": {
    "url": "https://github.com/yourusername/whatsapp-clone-api/issues"
  },
  "homepage": "https://github.com/yourusername/whatsapp-clone-api#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon --inspect app.js",
    "dev:fast": "nodemon --ignore 'data/*' --ignore 'logs/*' --delay 500 app.js",
    "dev:debug": "nodemon --inspect-brk app.js",
    "prod": "NODE_ENV=production node app.js",
    "pm2": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop whatsapp-clone-api",
    "pm2:restart": "pm2 restart whatsapp-clone-api",
    "pm2:logs": "pm2 logs whatsapp-clone-api",
    "pm2:monit": "pm2 monit",
    "setup": "node scripts/setup.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "backup": "node scripts/backup.js",
    "cleanup": "node scripts/cleanup.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\""
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.10.53",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pino": "^8.17.1",
    "pino-pretty": "^10.3.1",
    "qrcode": "^1.5.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/ws": "^8.5.9",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  }
}